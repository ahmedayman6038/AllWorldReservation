@model IEnumerable<AllWorldReservation.BL.Models.MailModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/DashboardLayout/_DashboardLayout.cshtml";
}

<!-- Basic Examples -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Sned Messages
                </h2>
                <button type="button" class="btn btn-primary waves-effect m-t-15" onclick="window.open('/Mails/Create','_self')">
                    <span>Send Mail</span>
                    <i class="material-icons">send</i>
                </button>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                        <thead>
                            <tr>
                                @*<th>@Html.DisplayNameFor(model => model.User)</th>*@
                                <th>@Html.DisplayNameFor(model => model.Email)</th>
                                <th>@Html.DisplayNameFor(model => model.Subject)</th>
                                <th>@Html.DisplayNameFor(model => model.Date)</th>
                                <th>Options</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    @*<td>@Html.DisplayFor(modelItem => item.User.Name)</td>*@
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Subject)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Date)</td>
                                    <td>
                                        <button type="button" class="btn btn-info waves-effect" onclick="window.open('/Mails/Details/@item.Id','_self')">
                                            <i class="material-icons">info</i>
                                        </button>
                                        <form method="post" action="/Mails/Delete/@item.Id" style="display:inline-block">
                                            <button type="submit" class="btn btn-danger waves-effect">
                                                <i class="material-icons">delete</i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- #END# Basic Examples -->
@section scripts {
    <script>
        $(function () {
            $('.js-basic-example').DataTable({
                responsive: true,
                order: []
            });
            $("form").submit(function () {
                if (confirm('Are you sure, you want to delete this item!')) {
                    return true;
                } else {
                    return false;
                };
            });
        });
    </script>
}