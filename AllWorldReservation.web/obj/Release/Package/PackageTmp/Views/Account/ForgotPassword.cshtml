@model AllWorldReservation.web.Models.ForgotPasswordViewModel

@{
    ViewBag.Title = "Forget Password";
    Layout = "~/Views/Layout/DashboardLayout/_AccountLayout.cshtml";
}

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="msg">Forget Password</div>
    <div class="input-group">
        <span class="input-group-addon">
            <i class="material-icons">email</i>
        </span>
        <div class="form-line">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.Email), autofocus = "" } })
        </div>
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>
    <button class="btn btn-block btn-lg bg-pink waves-effect" type="submit">EMAIL LINK</button>
}
