@using AllWorldReservation.web.Models
@model AllWorldReservation.BL.Models.HotelModel
@{
    Layout = "~/Views/Layout/WebsiteLayout/_WebsiteLayout.cshtml";
    ViewBag.Title = "Booking";
    var rooms = (List<SearchViewModel>)ViewBag.Rooms;
    var checkIn = (DateTime)ViewBag.CheckIn;
    var checkOut = (DateTime)ViewBag.CheckOut;
}
<div class="hero-wrap js-fullheight" style="background-image: url('../../images/bg_1.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-9 text-center ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
                <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="index.html">Home</a></span> <span>Hotel</span></p>
                <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">@ViewBag.Location</h1>
            </div>
        </div>
    </div>
</div>
<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-8 ftco-animate">
                <h4 class="mb-1">@Model.Name </h4>
                <span class="mb-3"><i class="icon-calendar"></i> CheckIn: @checkIn.ToString("dd-MM-yyyy")</span>
                <span class="mb-3 float-right"><i class="icon-calendar"></i> CheckOut: @checkOut.ToString("dd-MM-yyyy")</span><br />
                <span class="mb-3"><i class="icon-map-o"></i> @Model.Address</span>
                <br />
                @Html.Raw(Model.Description)
            </div> <!-- .col-md-8 -->
            <div class="col-md-4">
                <img src="@(Model.Photo != null ? "/Uploads/" + Model.Photo.Name : "/images/blank.png")" class="dynamic" id="@Model.Id" name="@Model.Name" style='height: 100%; width: 100%; object-fit: contain' />
            </div>
        </div>
        <br />
        <div class="row">
            <form action="/Book/Hotel" method="get" style="width: 100%">
                <input type="hidden" name="Guid" value="@Model.GUID" />
                <input type="hidden" name="ResultId" value="@Model.ResultId" />
                <input type="hidden" name="CheckIn" value="@checkIn" />
                <input type="hidden" name="CheckOut" value="@checkOut" />
                <input type="hidden" name="HotelType" value="@Model.Type" />
                @{ var counter = 0;}
                @foreach (var item in rooms)
                {
                    var totalGuests = item.Adults + item.Teenagers + item.Children + item.Infants;
                    var first = true;
                    var hotelRooms = Model.Rooms.Where(r => r.Guests == totalGuests);
                    <table style="width:100%;text-align:center;">
                        <tr>
                            <th>Select</th>
                            <th>Room @(counter + 1) (@totalGuests Guests Sharing)</th>
                            <th>Description</th>
                            <th>Room Price</th>
                        </tr>
                        @foreach (var room in hotelRooms)
                        {
                            <tr>
                                <td><input type="radio" name="rooms[@counter]" value="@room.Id" @(first ? "checked" : "") /></td>
                                <td>@room.Name</td>
                                <td>@room.Description</td>
                                <td>@room.TotalAmount $</td>
                            </tr>
                            first = false;
                        }
                    </table>
                    counter++;
                }
                <button type="submit" class="mt-4 btn btn-primary" id="payButton">Book</button>
            </form>
        </div>
    </div>
</section>
@section scripts{
    <script>
        $('.dynamic').on('click', function () {
            debugger;
            var itemId = $(this).attr("id");
            var itemName = $(this).attr("name");
            $.ajax({
                method: "GET",
                url: "/Galleries/Get/" + itemId + "?type=" + @((int)AllWorldReservation.BL.Enums.EnumCollection.PhotoType.Hotel),
                dataType: "json",
                success: function (data, status, xhr) {
                    debugger;
                    var elements = [];
                    for (var i = 0; i < data.length; i++) {
                        var element = {
                            "src": data[i],
                            "thumb": data[i],
                            "subHtml": '<p>' + itemName + '</p>'
                        }
                        elements.push(element);
                    }
                    $(this).lightGallery({
                        dynamic: true,
                        dynamicEl: elements
                    })
                },
                error: function (jqXhr, textStatus, errorMessage) {
                    debugger;
                    console.log(errorMessage);
                }
            });
        });
    </script>
}
