@model IEnumerable<AllWorldReservation.DAL.Entities.Post>
@{
    Layout = "~/Views/Layout/WebsiteLayout/_WebsiteLayout.cshtml";
    ViewBag.Title = "Blog";
}


<body>

    <div class="hero-wrap js-fullheight" style="background-image: url('../../images/bg_1.jpg');">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
                <div class="col-md-9 text-center ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
                    <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="index.html">Home</a></span> <span>Blog</span></p>
                    <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Tips &amp; Articles</h1>
                </div>
            </div>
        </div>
    </div>
    <section class="ftco-section bg-light">
        <div class="container">
            <div class="row d-flex">

                @foreach (var item in Model)
                {
                    <div class="col-md-4 d-flex ftco-animate">
                        <div class="blog-entry align-self-stretch">
                            <a href="/Blog/@item.Id" class="block-20" style="background-image: url(@(item.Photo != null ? "../../Uploads/" + item.Photo.Name : "../../images/blank.png"));">
                            </a>
                            <div class="text">
                                <h3 class="heading mt-3"><a href="/Blog/@item.Id">@item.Title</a></h3>
                                <div class="meta mb-3">
                                    <div><a href="#">@item.CreatedDate.ToString("MMMM") @item.CreatedDate.Day, @item.CreatedDate.Year</a></div>
                                    <div><a href="#">Admin</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                </div>
            <div class="row mt-5">
                <div class="col text-center">
                    <div class="block-27">
                        <ul>
                            <li class="@(ViewBag.currentPage == 1 ? "disabled" : "")"><a href="/Blog?page=1">&lt;</a></li>
                            @for (int i = 1; i <= ViewBag.totalPage; i++)
                            {
                                <li class="@(ViewBag.currentPage == i ? "active" : "")"><a href="/Blog?page=@i">@i</a></li>

                            }
                            <li class="@(ViewBag.currentPage == ViewBag.totalPage ? "disabled" : "")"><a href="/Blog?page=@ViewBag.totalPage">&gt;</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
