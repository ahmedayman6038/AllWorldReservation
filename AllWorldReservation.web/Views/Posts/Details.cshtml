@model AllWorldReservation.BL.Models.PostModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Layout/DashboardLayout/_DashboardLayout.cshtml";
    string photoName = "";
    if(Model.Photo != null)
    {
        photoName = Model.Photo.Name;
    }
}

<!-- Vertical Layout -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Post Details
                </h2>
                <button type="button" class="btn btn-primary waves-effect m-t-15" onclick="window.open('/Posts','_self')">
                    <i class="material-icons">keyboard_arrow_left</i>
                    <span>Back To List</span>
                </button>
            </div>
            <div class="body">
                @Html.AntiForgeryToken()
                @Html.DisplayNameFor(model => model.Title)
                <div class="form-group">
                    <div class="form-line">
                        @Html.DisplayFor(model => model.Title)
                    </div>
                </div>
                @Html.DisplayNameFor(model => model.CategoryId)
                <div class="form-group">
                    <div class="form-line">
                        @Html.DisplayFor(model => model.Category.Name)
                    </div>
                </div>
                @Html.DisplayNameFor(model => model.CreatedDate)
                <div class="form-group">
                    <div class="form-line">
                        @Html.DisplayFor(model => model.CreatedDate)
                    </div>
                </div>
                @Html.DisplayNameFor(model => model.Content)
                <div class="form-group">
                    <div class="form-line">
                        @Html.Raw(Model.Content)
                    </div>
                </div>
                @if (photoName != "")
                {
                    <div class="form-group">
                        <button type="button" class="btn btn-default waves-effect m-r-20" data-toggle="modal" data-target="#defaultModal">
                            <i class="material-icons">add_photo_alternate</i>
                            <span>@Html.DisplayNameFor(model => model.PhotoId)</span>
                        </button>
                    </div>
                }
                <button type="button" class="btn btn-primary waves-effect" onclick="window.open('/Posts/Edit/@Model.Id','_self')">
                    <i class="material-icons">edit</i>
                    <span>Edit</span>
                </button>
            </div>
        </div>
    </div>
</div>
<!-- #END# Vertical Layout -->
<!-- Default Size -->
<div class="modal fade" id="defaultModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="defaultModalLabel">@Html.DisplayNameFor(model => model.Photo)</h4>
            </div>
            <div class="modal-body">
                <img src="@Url.Content("~/Uploads/" + photoName)" class="img-responsive">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-link waves-effect" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>