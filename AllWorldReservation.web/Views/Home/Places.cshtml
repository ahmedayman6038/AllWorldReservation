@using System.Text.RegularExpressions
@model IEnumerable<AllWorldReservation.DAL.Entities.Place>
@{
    Layout = "~/Views/Layout/WebsiteLayout/_WebsiteLayout.cshtml";
    ViewBag.Title = "Places";
}



<div class="hero-wrap js-fullheight" style="background-image: url('../../images/bg_1.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-9 text-center ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
                <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="index.html">Home</a></span> <span>Places</span></p>
                <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Destinations</h1>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 sidebar order-md-last ftco-animate">
                <div class="sidebar-wrap ftco-animate">
                    <h3 class="heading mb-4">Find Place</h3>
                    <form action="/Place" method="get">
                        <div class="fields">
                            <div class="form-group">
                                <input type="text" class="form-control" id="place" name="place" value="@ViewBag.Place" placeholder="Enter Place">
                            </div>
                            <div class="form-group">
                                <div class="range-slider">
                                    <span>
                                        From
                                        <input type="number" name="fromPrice" id="fromPrice" value="@ViewBag.FromPrice" min="0" max="120000" />	-
                                        To
                                        <input type="number" name="toPrice" id="toPrice" value="@ViewBag.ToPrice" min="0" max="120000" />
                                    </span>
                                    @*<input value="1000" min="0" max="120000" step="500" type="range" />
                                    <input value="50000" min="0" max="120000" step="500" type="range" />*@
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Search" class="btn btn-primary py-3 px-5">
                            </div>
                        </div>
                    </form>
                </div>
            </div><!-- END-->
            <div class="col-lg-9">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-sm col-md-6 col-lg-4 ftco-animate">
                            <div class="destination">
                                <a class="img img-2 d-flex justify-content-center align-items-center dynamic" id="@item.Id" name="@item.Name" style="background-image: url(@(item.Photo != null ? "../../Uploads/" + item.Photo.Name : "../../images/blank.png"));">
                                    <div class="icon d-flex justify-content-center align-items-center">
                                        <span class="icon-link"></span>
                                    </div>
                                </a>
                                <div class="text p-3">
                                    <div class="d-flex">
                                        <div class="one">
                                            <h3><a href="#">@item.Name</a></h3>
                                        </div>
                                        <div class="two">
                                            <span class="price">@item.Price $</span>
                                        </div>
                                    </div>
                                    <p>@Regex.Replace(item.Description ?? "", "<(.|\\n)*?>", string.Empty)</p>
                                    <p class="days"><span>@item.Duration days</span></p>
                                    <hr>
                                    <p class="bottom-area d-flex">
                                        <span><i class="icon-map-o"></i> @item.Location</span>
                                        <span class="ml-auto"><a href="/bookplace/@item.Id">Book Now</a></span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="row mt-5">
                    <div class="col text-center">
                        <div class="block-27">
                            <ul>
                                <li class="@(ViewBag.currentPage == 1 ? "disabled" : "")"><a href="/Place?page=1&place=@ViewBag.Place&fromPrice=@ViewBag.FromPrice&toPrice=@ViewBag.ToPrice">&lt;</a></li>
                                @for (int i = 1; i <= ViewBag.totalPage; i++)
                                {
                                    <li class="@(ViewBag.currentPage == i ? "active" : "")"><a href="/Place?page=@i&place=@ViewBag.Place&fromPrice=@ViewBag.FromPrice&toPrice=@ViewBag.ToPrice">@i</a></li>

                                }
                                <li class="@(ViewBag.currentPage == ViewBag.totalPage ? "disabled" : "")"><a href="/Place?page=@ViewBag.totalPage&place=@ViewBag.Place&fromPrice=@ViewBag.FromPrice&toPrice=@ViewBag.ToPrice">&gt;</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div> <!-- .col-md-8 -->
        </div>
    </div>
</section> <!-- .section -->
@section scripts{
<script>
        $('.dynamic').on('click', function () {
            debugger;
            var itemId = $(this).attr("id");
            var itemName = $(this).attr("name");
            $.ajax({
                method: "GET",
                url: "/Galleries/Get/" + itemId + "?type=" + @((int)AllWorldReservation.BL.Enums.EnumCollection.PhotoType.Place),
                dataType: "json",
                success: function (data, status, xhr) {
                    debugger;
                    var elements = [];
                    for (var i = 0; i < data.length; i++) {
                        var element = {
                            "src": data[i],
                            "thumb": data[i],
                            "subHtml": '<p>' + itemName + '</p>'
                        }
                        elements.push(element);
                    }
                    $(this).lightGallery({
                        dynamic: true,
                        dynamicEl: elements
                    })
                },
                error: function (jqXhr, textStatus, errorMessage) {
                    debugger;
                    console.log(errorMessage);
                }
            });
        });
</script>
}
