    //var post2 = Model.Where(p => p.Id == 17).First();
    //var post3 = Model.Where(p => p.Id == 18).First();
    //var post4 = Model.Where(p => p.Id == 19).First();
    //var post5 = Model.Where(p => p.Id == 20).First();
    //var post6 = Model.Where(p => p.Id == 21).First();
    //var post7 = Model.Where(p => p.Id == 22).First();
    //var post8 = Model.Where(p => p.Id == 23).First();
}



<div class="hero-wrap js-fullheight" style="background-image: url('../../images/bg_1.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-9 text-center ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
                <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="index.html">Home</a></span> <span>About</span></p>
                <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">About Us</h1>
            </div>
        </div>
    </div>
</div>
<section class="ftco-section">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="intro ftco-animate" style="text-align:center;">
                    <h3><span>01</span> @post1.Title</h3>
                    @Html.Raw(post1.Content)
                </div>
            </div>
            <div class="col-md-4">
                <div class="intro ftco-animate" style="text-align:center;">
                    <h3><span>02</span> @post2.Title</h3>
                    @Html.Raw(post2.Content)
                </div>
            </div>
            <div class="col-md-4">
                <div class="intro ftco-animate" style="text-align:center;">
                    <h3><span>03</span> @post3.Title</h3>
                    @Html.Raw(post3.Content)
                </div>
            </div>
        </div>
    </div>
</section>
<section class="ftco-section ftco-counter img" id="section-counter" style="background-image: url(../../images/bg_1.jpg);" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="row">
                    <div class="col-md-3 d-flex justify-content-center counter-wrap ftco-animate">
                        <div class="block-18 text-center">
                            <div class="text">
                                <strong class="number" data-number="@ViewBag.Customers">0</strong>
                                <span>Happy Customers</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 d-flex justify-content-center counter-wrap ftco-animate">
                        <div class="block-18 text-center">
                            <div class="text">
                                <strong class="number" data-number="@ViewBag.TotalBooking">0</strong>
                                <span>Booking Item</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 d-flex justify-content-center counter-wrap ftco-animate">
                        <div class="block-18 text-center">
                            <div class="text">
                                <strong class="number" data-number="@ViewBag.TotalHotels">0</strong>
                                <span>Hotels</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 d-flex justify-content-center counter-wrap ftco-animate">
                        <div class="block-18 text-center">
                            <div class="text">
                                <strong class="number" data-number="@ViewBag.TotalTours">0</strong>
                                <span>Tours</span>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

<section class="ftco-about d-md-flex">
    <div class="one-half img" style="background-image: url(@(post4.Photo != null ? "../../Uploads/" + post4.Photo.Name : "../../images/blank.png"));"></div>
    <div class="one-half ftco-animate">
        <div class="heading-section ftco-animate ">
            <h2 class="mb-4">@post4.Title</h2>
        </div>
        <div>
            @Html.Raw(post4.Content)
        </div>
    </div>
</section>


<section class="ftco-section services-section bg-light">
    <div class="container">
        <div class="row d-flex">
            <div class="col-md-3 d-flex align-self-stretch ftco-animate">
                <div class="media block-6 services d-block">
                    <div class="icon" style="text-align:center;"><span class="flaticon-yatch"></span></div>
                    <div class="media-body" style="text-align:center;">
                        <h3 class="heading mb-3">@post5.Title</h3>
                        @Html.Raw(post5.Content)
                    </div>
                </div>
            </div>
            <div class="col-md-3 d-flex align-self-stretch ftco-animate">
                <div class="media block-6 services d-block">
                    <div class="icon" style="text-align:center;"><span class="flaticon-around"></span></div>
                    <div class="media-body" style="text-align:center;">
                        <h3 class="heading mb-3">@post6.Title</h3>
                        @Html.Raw(post6.Content)
                    </div>
                </div>
            </div>
            <div class="col-md-3 d-flex align-self-stretch ftco-animate">
                <div class="media block-6 services d-block">
                    <div class="icon" style="text-align:center;"><span class="flaticon-compass"></span></div>
                    <div class="media-body" style="text-align:center;">
                        <h3 class="heading mb-3">@post7.Title</h3>
                        @Html.Raw(post7.Content)
                    </div>
                </div>
            </div>
            <div class="col-md-3 d-flex align-self-stretch ftco-animate">
                <div class="media block-6 services d-block">
                    <div class="icon" style="text-align:center;"><span class="flaticon-map-of-roads"></span></div>
                    <div class="media-body" style="text-align:center;">
                        <h3 class="heading mb-3">@post8.Title</h3>
                        @Html.Raw(post8.Content)
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
