@model IEnumerable<AllWorldReservation.BL.Models.PostModel>
@{
    Layout = "~/Views/Layout/WebsiteLayout/_WebsiteLayout.cshtml";
    ViewBag.Title = "About";
    var post1 = Model.Where(p => p.Id == 3).First();
    var post2 = Model.Where(p => p.Id == 4).First();
    var post3 = Model.Where(p => p.Id == 5).First();
    var post4 = Model.Where(p => p.Id == 6).First();
    var post5 = Model.Where(p => p.Id == 7).First();
    var post6 = Model.Where(p => p.Id == 8).First();
    var post7 = Model.Where(p => p.Id == 9).First();
    var post8 = Model.Where(p => p.Id == 10).First();
